@model UserAddDto
@{
	ViewData["Title"] = "Ekle";
	Layout = "_Layout";
}

<div class="container-xxl flex-grow-1 container-p-y">
	<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kullanıcılar /</span> Kullanıcı Ekle</h4>

	<div class="row">
		<div class="col-md-12">
			<div class="card mb-4">
				<h5 class="card-header">Default</h5>
				<form method="post" asp-controller="User" asp-action="Add" enctype="multipart/form-data">
					<div asp-validation-summary="All" style="color:red;"></div>
					<div class="card-body">
						<div class="form-group">
							<label asp-for="RoleId" for="defaultFormControlInput" class="form-label">Rol</label>
								<select asp-for="RoleId" class="form-label" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
							<span asp-validation-for="RoleId" class="text-danger"></span>
						</div>
					</div>

					<div class="card-body">
						<div class="form-group">
							<label asp-for="FirstName" for="defaultFormControlInput" class="form-label">İsim</label>
							<input asp-for="FirstName" type="text" class="form-control" id="defaultFormControlInput" placeholder="İsim" aria-describedby="defaultFormControlHelp">
							<span asp-validation-for="FirstName" class="text-danger"></span>
						</div>
					</div>

					<div class="card-body">
						<div class="form-group">
							<label asp-for="LastName" for="defaultFormControlInput" class="form-label">Soyisim</label>
							<input asp-for="LastName" type=" text" class="form-control" id="defaultFormControlInput" placeholder="Soyisim" aria-describedby="defaultFormControlHelp">
							<span asp-validation-for="LastName" class="text-danger"></span>
						</div>
					</div>

					<div class="card-body">
						<div class="form-group">
							<label asp-for="Email" for="defaultFormControlInput" class="form-label">Email</label>
							<input asp-for="Email" type="email" class="form-control" id="defaultFormControlInput" placeholder="Email" aria-describedby="defaultFormControlHelp">
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
					</div>

					<div class="card-body">
						<div class="form-group">
							<label asp-for="PhoneNumber" for="defaultFormControlInput" class="form-label">Telefon Numarası</label>
							<input asp-for="PhoneNumber" type="tel" class="form-control" id="defaultFormControlInput" placeholder="Telefon Numarası" aria-describedby="defaultFormControlHelp">
							<span asp-validation-for="PhoneNumber" class="text-danger"></span>
						</div>
					</div>

					<div class="card-body">
						<div class="form-group">
							<label asp-for="Password" for="defaultFormControlInput" class="form-label">Şifre</label>
							<input asp-for="Password" type="password" class="form-control" id="defaultFormControlInput" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="defaultFormControlHelp">
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
					</div>
					
					<div class="card-body">
						<div class="form-group">
							<button type="submit" class="btn btn-primary btn-block">Kaydet</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>