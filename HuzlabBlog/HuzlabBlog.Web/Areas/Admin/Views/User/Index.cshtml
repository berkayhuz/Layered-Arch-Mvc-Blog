@model List<UserDto>
@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "_Layout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kullanıcı Yönetimi /</span>Kullanıcılar</h4>
    <div class="card">
        <h5 class="card-header">Kullanıcılar</h5>
        <div class="table-responsive text-nowrap">
            <a class="btn btn-success" asp-area="Admin" asp-controller="User" asp-action="Add">Kullanıc Ekle<i class="bx bc-plus"></i></a>
            <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Rol</th>
                        <th>Başarısız Bağlantı</th>
                        <th>Email Doğrulaması</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Rol</th>
                        <th>Başarısız Bağlantı</th>
                        <th>Email Doğrulaması</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var user in Model)
                    {
                        <tr name="@user.Id">
                            <th>@user.FirstName</th>
                            <th>@user.LastName</th>
                            <th>@user.Email</th>
                            <th>@user.PhoneNumber</th>
                            <th>@user.Role</th>
                            <th>@(user.EmailConfirmed ? "Doğrulanmış" : "Doğrulanmamış")</th>
                            <th>@user.AccessFailedCount</th>
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="user" asp-action="Update" asp-route-userId="@user.Id">
                                    <i class="bx bxs-edit"></i>
                                </a>
                                <a class="btn btn-warning btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="user" asp-action="Delete" asp-route-userId="@user.Id">
                                    <i class="bx bx-minus-circle"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/assets/js/custom.js" type="application/ecmascript"></script>
}