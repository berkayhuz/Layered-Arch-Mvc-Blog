@model List<ArticleDto>
@{
    ViewData["Title"] = "Paylaşımlar";
    Layout = "_Layout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Paylaşımlar /</span> Paylaşımlar</h4>
    <div class="card">
        <h5 class="card-header">Paylaşımlar</h5>
        <div class="table-responsive text-nowrap">
            <br />

            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Article" asp-action="Add">
                Gönderi Ekle <i class="bx bx-plus"></i>
            </a>
            <br/>
            <br />
            <br />
            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var article in Model){
                        <tr name="@article.Id">
                            <th>@article.Title</th>
                            <th>@article.Category.Name</th>
                            <th>@article.CreatedDate</th>
                            <th>@article.CreatedBy</th>
                            <th>@(article.IsDeleted ? "in Aktif" : "Aktif")</th>
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Update" asp-route-articleId="@article.Id">
                                    <i class="bx bxs-edit"></i>
                                </a>
                                <a class="btn btn-warning btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-articleId="@article.Id">
                                    <i class="bx bx-minus-circle"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/assets/js/custom.js" type="application/ecmascript"></script>
}